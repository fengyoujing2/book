<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>编辑角色</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        

        <!-- Panel Other -->
        <div class="ibox float-e-margins">
                <div class="form-group">
                    <label class="col-sm-2 control-label">角色名称：</label>
                    <div class="col-sm-6">
                        <input id="ROLE_NAME" name="ROLE_NAME" minlength="2" th:value="${ROLE_NAME}" type="text" class="form-control" required="" aria-required="true">
                        <input id="ROLE_ID" name="ROLE_ID" type="hidden" th:value="${ROLE_ID}"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-3">
                        <button class="btn btn-primary" type="button" onclick="addRole()">提交</button>
                    </div>
                </div>
        </div>
        <div th:include="html/page/contentpublic :: html"></div>
        <!-- End Panel Other -->
    </div>
    <script type="text/javascript">
    function addRole(){
            var basePath = "/"+window.location.pathname.split("/")[1];
            var ROLE_NAME = $("#ROLE_NAME").val()//角色名称
            var ROLE_ID = $("#ROLE_ID").val()//角色ID
                $.ajax({
                            type: "get",
                            url: basePath+"/role/editRoleName",
                            async: false,
                            data: {"ROLE_NAME":ROLE_NAME,"ROLE_ID":ROLE_ID},
                            success: function (data)
                            {
                                if(data.msg == 200){
                                    alert("更新成功！");
                                }else{

                                }
                            },
                            error:function(){
                                alert("出错！");
                            }
                         });
	}
	</script>
    

</body>

</html>
