
body {
	background-color: #b40001;
    background-image: url('../images/bg1.png');
    background-size: 100% 100%; 
    overflow:hidden;
    font-family: 'monospace'
}
.el-input input{
    color:gold;
    background-color: transparent;
}
.down{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 200px;
    
}
.downs{
    width:80%;
    margin:auto;
    margin-top: -20px;
    position: relative;
}
.down_imgl{
    width:600px;
    position: absolute;
    left: -20%;
    top:40
}
.down_imgr{
    width:600px;
    position: absolute;
    right: -20%;
    top:40
}
.down_imgc{
    width:100%;
    position: absolute;
    right: 0;
    top:0
}
.down_imgl1{
    width: 1000px;
    position: absolute;
    right: -20%;
    top:10px;
}
.down_imgr1{
    transform:rotateY(180deg);
    width: 1000px;
    position: absolute;
    left: -20%;
    top:10px;
}
.down_imgxy1{
    width: 300px;
    position: absolute;
    left: 10%;
    top:-50px;
}
.down_imgxy2{
    width: 300px;
    transform:rotateY(180deg);
    position: absolute;
    right: 10%;
    top:-50px;
}
.down_imgxy3{
    width: 100px;
    transform:rotateY(180deg);
    position: absolute;
    right: -40px;
    top:-10px;
}

@-webkit-keyframes rotate{
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(360deg);
    }
}
@-webkit-keyframes anim{
    0% {top: 100px;opacity: 1}
    50% {top: -100px;opacity: 1}
    75% {top: -100px ;opacity: 0}
    100%{top:100px;opacity: 0}
  }
@-webkit-keyframes scale{
    0%{
        transform:scale(0);
    }
    100%{
        transform:scale(1);
    }
}
@-webkit-keyframes rotate_s0{
    0%{
        transform: rotateY(0deg);
    }
    100%{
        transform: rotateY(180deg);
    }
}
.p_name{
    -webkit-animation: anim .3s linear infinite;
}
#app{
    width: 100%;
}
.center{
    width: 100%;
    height: 500px;
}
.zpNanme{
    width: 500px;
    margin: auto;
    position: relative;
}
.zpNanme img{
    width: 500px;
    margin-top: -20px;
}
.zpname2{
    width: 370px;
    height: 100px;
    background-color: #b40001;
    position: absolute;
    left: 65px;
    top: 170px;
    overflow: hidden;
}
.starDiv{
    position: absolute;
    left: 0;
    top:-20px;
    width: 100%;
    z-index: 9999;
}
.star{
    width: 120px;
    height: 120px;
    text-align: center;
    line-height: 120px;
    color: #fff;
    font-size: 30px;
    margin: auto;
    cursor: pointer;
    background: url('../images/start.png') no-repeat;
    background-size: 100% 100%; 
    overflow:hidden;
}
.rewardNameL{
    text-align: center;
    font-size: 40px;
    color: #000;
}
.rewardNameL span{
    color: gold;
}
.zpname2 p{
    width: 100%;
    position: absolute;
    margin: 0;
    height: 100px;
    line-height: 100px;
    text-align: center;
    font-size: 40px;
    color:#e7c373;
}
.rewardList{
    width: 950px;
    height: 500px;
    margin: auto;
    display: flex;
    justify-content: space-around;
    align-items:center;
    flex-wrap: wrap;
}
.down_s0{
    width: 145px;
    height: 200px;
    cursor:pointer;
    color: transparent;
    border: 1px solid #fcdb62;
    border-radius: 8px;
    box-shadow: 0 0 10px #fcdb62;
    background-color: #cf0708;
    background-image: url("../images/poke.png");
    background-repeat: no-repeat;
    background-size:100%;
    margin:20px;
    animation: scale 1s ease-in-out 0s 1 alternate forwards;
}
.down_s1{
    font-size: 28px;
    text-align: center;
    line-height: 100px;
    transform: rotateY(180deg);
}